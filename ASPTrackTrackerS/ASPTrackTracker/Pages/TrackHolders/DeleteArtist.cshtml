@page
@model ASPTrackTracker.Pages.TrackHolders.DeleteArtistModel
@{
}
<h1>Delete Artist</h1>

@if (Model.Artist is null)
{
    <h4>The requested Artist was not found.</h4>
}
else
{
    <div class="h4">
        Are you sure you want to delete @Model.Artist.Name <strong>and all their tracks</strong>?
    </div>
    <form method="post">
        <input asp-for="Id" value="@Model.Id" type="hidden" />
        <div class="form-group">
            <input type="submit" value="Delete Artist" class="btn btn-danger" />
        </div>
    </form>
    <button onclick="window.history.back()" class="btn btn-primary">Cancel</button>

}
