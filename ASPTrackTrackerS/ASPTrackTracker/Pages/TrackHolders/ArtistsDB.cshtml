@page
@model ASPTrackTracker.Pages.TrackHolders.ArtistsDBModel
@{
    ViewData["Title"] = "Artists Rating";
}
<h1>Artists DB</h1>
<head>
    <style>
        .select :hover {
            cursor: pointer;
        }

        .title {
            text-align: center;
        }

        .tableDBH {
            border-collapse: separate;
            border-spacing: 10px; /* Espacio entre las celdas */
            width: 100%; /* Ancho de la tabla */
            padding: 10px; /* Espaciado alrededor del contenido de las celdas */
            background-color: darkslategray;
            text-decoration: bold;
        }

        .tableDBB {
            border-collapse: separate;
            border-spacing: 10px; /* Espacio entre las celdas */
            width: 100%; /* Ancho de la tabla */
            padding: 9px; /* Espaciado alrededor del contenido de las celdas */
            background-color: lightsteelblue;
            text-decoration: none;
        }
    </style>
</head>
<form method="get">
    <body>
        <h1 class="title">Artists Rating</h1>
        <table class="tableDBH">
            <thead>
                <tr>
                    <th><h2>Artist</h2></th>
                    <th><h2>Artist Genre</h2></th>
                    <th><h2>Tracks Style</h2></th>
                    <th><h2>Stat</h2></th>
                </tr>
                <tr>@Model.FilterPrompt</tr>
            </thead>
            <thead>
                <tr>
                    <th> </th>
                    <th><h2><select asp-for="GenreId" asp-items="Model.GenreItems" class="form-control select"></select></h2></th>
                    <th><h2><select asp-for="StyleId" asp-items="Model.StyleItems" class="form-control select"></select></h2></th>
                    <th><h2><select asp-for="SelectedStat" asp-items="Model.StatItems" class="form-control select"></select></h2></th>
                    <th><button type="submit">Filter</button></th>
                  </tr>
            </thead>
            <tbody class="tableDBB">
                @foreach (var artist in Model.comparableArtists)
                {
                    <tr>
                        <td><strong>@Html.Raw(@Model.comparableArtists.IndexOf(artist) + 1) - @artist.Name</strong></td>
                        <td>@artist.Genre</td>
                        <td>Filtering by @Model.FilterStyleName</td>
                        <td title="@await Model.artistsFilter.CheckAmmountArtistStyleTracks(artist, @Model.StyleId) tracks."><strong>@Html.Raw(artist.GetScoreByStat(Model.SelectedStat))</strong></td>
                        <td><a asp-page="../Stats/ArtistStats" asp-route-id="@artist.ModelId" class="btn btn-danger">View</a></td>
                    </tr>
                }
                @if (Model.filteredArtists.Count < 1)
                {
                    <tr>
                        <td>No matches with the current criteria.</td>
                    </tr>
                }
            </tbody>
        </table>
    </body>
</form>
<form method="postReset">
    <th><button type="submit">Reset Filters</button></th>
</form>
