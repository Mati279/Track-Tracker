@page
@model ASPTrackTracker.Pages.TrackHolders.CreateGenreModel
@{
    ViewData["Title"] = "Create Genre";
}
<h1>Create Genre</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="@Model.Genre.Name" class="control-label"></label>
        <input asp-for="@Model.Genre.Name" class="form-control">
        <span asp-validation-for="@Model.Genre.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
<button onclick="window.history.back()" class="btn btn-primary">Cancel</button>
